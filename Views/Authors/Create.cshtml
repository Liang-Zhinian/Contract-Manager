@model PublishingContractManager.Models.Author

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Author</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telephone" class="control-label"></label>
                @if (TempData["Error"].ToString() == "None")
                {
                    <input asp-for="Telephone" class="form-control" value="(###)###-####" />
                }
                else
                {
                    <input asp-for="Telephone" class="form-control"  />
                }
                <span asp-validation-for="Telephone" class="text-danger"></span>
                @if (TempData["Error"].ToString() == "Telephone number must be in the following format: (###)###-####")
                {
                    <p style="color:red">Telephone number must be in the following format: (###)###-####</p>

                }
            </div>
            <div class="form-group">
                <label asp-for="EMail" class="control-label"></label>
                <input asp-for="EMail" class="form-control" />
                <span asp-validation-for="EMail" class="text-danger"></span>
                @if (TempData["Error"].ToString() == "Invalid email address.")
                {
                    <p style="color:red">Invalid email address.</p>

                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
